<Window x:Class="Actividad_2_MVVM_David_Oviedo.View.Actividades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad_2_MVVM_David_Oviedo.View"
        mc:Ignorable="d"
        Title="Gestión de actividades" Height="690" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2D6A8D" />
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1F4A63" />
        <SolidColorBrush x:Key="AccentBrush" Color="#F2B138" />
        <SolidColorBrush x:Key="LightBrush" Color="#F7FAFD" />
        <SolidColorBrush x:Key="BorderBrush" Color="#D6DFE6" />
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#EEF3F8" Offset="0" />
                <GradientStop Color="#DCE7F1" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="label_actividades" Text="Actividades" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryDarkBrush}" Margin="24,12,0,8" />

        <Border x:Name="border_actividades" Grid.Row="1" Background="White" CornerRadius="10" Padding="16" Margin="16" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox x:Name="griupbox_actividades" Header="Datos de la actividad" BorderBrush="{StaticResource BorderBrush}" Background="White" Padding="12" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="label_nombre" Text="Nombre" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8" />
                        <TextBox x:Name="textbox_nombre" Grid.Row="0" Grid.Column="1" Text="{Binding ActividadEnFormulario.Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock x:Name="label_afoto" Text="Aforo máximo" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8" />
                        <TextBox x:Name="textbox_aforo" Grid.Row="1" Grid.Column="1" Text="{Binding ActividadEnFormulario.AforoMaximo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="button_limpiar" Content="Limpiar" Command="{Binding NuevoCommand}" Width="100" Background="{StaticResource PrimaryBrush}" Foreground="White" />
                            <Button x:Name="button_guardar" Content="Guardar" Command="{Binding GuardarCommand}" Width="100" Background="{StaticResource AccentBrush}" Foreground="White" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <DataGrid x:Name="dataGrid_actividades" Grid.Row="1" ItemsSource="{Binding ListaActividades}" AutoGenerateColumns="False" IsReadOnly="True"
                          SelectedItem="{Binding ActividadSeleccionadaGrid, Mode=TwoWay}" Margin="0,12,0,0" RowHeight="32">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60" />
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                        <DataGridTextColumn Header="Aforo máximo" Binding="{Binding AforoMaximo}" Width="150" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button x:Name="button_editar" Content="Editar" Command="{Binding EditarCommand}" Width="100" Background="{StaticResource PrimaryBrush}" Foreground="White" />
                    <Button x:Name="button_eliminar" Content="Eliminar" Command="{Binding EliminarCommand}" Width="100" Background="{StaticResource PrimaryDarkBrush}" Foreground="White" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
